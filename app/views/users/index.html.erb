<h1>Utenti</h1>

<table class="table table-striped table-bordered" id="users-table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Nome</th>
      <th>Cognome</th>
      <th>Ruolo</th>
      <th>Telefono</th>
      <th>Citt√†</th>
      <th>Compleanno</th>
      <th>IP</th>
    </tr>
  </thead>

  <tbody>
    <% @users.order(last_sign_in_at: :desc).each do |user| %>
      <tr>
        <td><%= link_to user.email, edit_user_path(user) %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.role.humanize %></td>
        <td><%= user.phone ? user.phone : "Assente" %></td>
        <td><%= user.city %></td>
        <td><%= user.birthday %></td>
        <td><%= user.current_sign_in_ip ? user.current_sign_in_ip : user.last_sign_in_ip %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>


<%= stylesheet_link_tag    'datatable-responsive/dataTables.responsive.css', media: 'all' %>
<%= javascript_include_tag 'datatable-responsive/dataTables.responsive.js' %>

<script type="text/javascript">
  $(document).ready(function() {
    $('#users-table').DataTable({
      responsive: true
    });
  });
</script>
