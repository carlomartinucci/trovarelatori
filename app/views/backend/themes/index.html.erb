<div class="page-header">
  <h1><%= @themes.count %> <%= Theme.model_name.human(count: @themes.count) %></h1>
</div>

<% @themes.each do |theme| %>
  <div class="panel panel-primary">

    <%= render partial: "panel_heading", locals: {theme: theme} %>

    <div class="panel-body">
      <% theme.arguments.each do |argument| %>
        <%= link_to argument.name, [:backend, argument], class: "btn btn-info btn-outline" %>
      <% end %>
    </div>

  </div>
<% end %>

<%= form_for [:backend, Theme.new], html: {class: "inline-create"} do |f| %>
  <%= f.submit %>
  <%= f.text_field :name, class: "form-block" %>
<% end if can?(:create, Theme) %>
