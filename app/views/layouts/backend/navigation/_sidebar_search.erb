<li class="sidebar-search">
  <%= form_tag backend_search_path, method: :get do %>
  <div class="input-group custom-search-form">
    <%= text_field :gsearch, params[:gsearch], class: "form-control", placeholder: "Cerca...", required: true %>
    <span class="input-group-btn">
      <%= button_tag class:"btn btn-default", role: "submit" do %>
        <i class="fa fa-search"></i>
      <% end %>
    </span>
  </div>
  <% end %>
</li>
