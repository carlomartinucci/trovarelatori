<h1>I tuoi percorsi</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journeys.each do |journey| %>
      <tr>
        <td><%= journey.id %></td>
        <td><%= link_to 'Esplora', journey %></td>
        <td><%= link_to 'Modifica', edit_journey_path(journey) %></td>
        <td><%= link_to 'Elimina', journey, method: :delete, data: { confirm: 'Sicuro che vuoi eliminare questo percorso? Perderai tutti i teoremi al suo interno.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo percorso', new_journey_path %>
